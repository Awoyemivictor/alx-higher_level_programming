- name: NGINX | Installing NGINX
  package: name=nginx state=present

- name: NGINX | Starting NGINX
  service:
	name: nginx
	state: started
	enable: yes

- name: Copy nginx configuration in place.
  template:
	src: nginx.conf.j2
	dest: "/etc/nginx.conf"
	owner: root
	group: root
	mode: 0644
   notify:
	- reload nginx
