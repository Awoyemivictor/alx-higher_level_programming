# Problem - You need to terminate, inspect, route, or load balance gRPC method calls.

server {
	listen 80 http2;
	
	location / {
		grpc_pass grpc://backend.local:50051;
	}
}

# To utilize TLS encryption between the client and NGINX

server {
	listen 443 ssl http2 default_server;

	ssl_certificate		server.crt;
	ssl_certificate_key	server.key;
	location / {
		grpc_pass grpc://backend.local:50051;
	}
}

# To configure NGINX to encrypt the gRPC communication to the application server, providing end-to-end encrypted traffic.

grpc_pass grpcs://backend.local:50051;


# To use NGINX to route calls to different backend services based on the gRPX URI

location /mypackage.service1 {
	grpc_pass grpc://$grpc_service1;
}
location /mypackage.service2 {
	grpc_pass grpc://$grpc_service2;
}
location / {
	root /usr/share/nginx/html;
	index index.html index.htm;
}
